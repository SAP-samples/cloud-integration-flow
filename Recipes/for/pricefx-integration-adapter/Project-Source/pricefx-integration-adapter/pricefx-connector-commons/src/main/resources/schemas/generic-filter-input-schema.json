{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "GenericFilterRequest",
  "type": "object",
  "examples": [
    {
      "operator": "and",
      "criteria": [
        {
          "fieldName": "sku",
          "operator": "equals",
          "value": "PRODUCT1"
        }
      ]
    }
  ],
  "required": [
    "operator",
    "criteria"
  ],
  "properties": {
    "operator": {
      "type": "string",
      "description": "Filter operation - AND / OR",
      "default": "and"
    },
    "criteria": {
      "type": "array",
      "description": "List of filters",
      "items": {
        "type": "object",
        "description": "Filter",
        "required": [
          "fieldName",
          "operator"
        ],
        "properties": {
          "fieldName": {
            "type": "string",
            "description": "field name"
          },
          "operator": {
            "type": "string",
            "description": "operator - equals, greaterThan, lessThan"
          },
          "value": {
            "type": "string",
            "description": "value"
          }
        }
      }
    }
  }
}

